{
   "compilerOptions": {
      "target": "ES2018",
      "sourceMap": true,
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": false,
      "skipLibCheck": true,
      "esModuleInterop": true
   },
   "exclude": ["node_modules", "**/*.test.ts"]
}
